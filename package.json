{
  "name": "tailgrid",
  "private": false,
  "version": "0.0.2",
  "license": "MIT",
  "description": "tailgrid is a sophisticated and powerful table component for React, built with Tailwind CSS and Radix UI. It offers a wide range of features, including sorting, filtering, pagination, and customizable themes, making it the perfect choice for developers looking to create beautiful and functional data tables in their applications.",
  "keywords": [
    "tailwindcss",
    "radix-ui",
    "react",
    "table",
    "component"
  ],
  "author":"Adeola Akinwole",
  "repository": {"url": "https://github.com/ax3cubed/tailgrid","type": "git"},
"release": {
    "branches": [
      {
        "name": "main",
        "prerelease": false
      }
    ]
  },
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist"
  ],
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc --p ./tsconfig.build.json && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-slot": "^1.1.2",
    "@tailwindcss/vite": "^4.0.15",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.483.0",
    "tailwind-merge": "^3.0.2",
    "tailwindcss": "^4.0.15",
    "tw-animate-css": "^1.2.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/node": "^22.13.11",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "glob": "^11.0.1",
    "globals": "^15.15.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0",
    "vite-plugin-dts": "^4.5.3",
    "vite-plugin-lib-inject-css": "^2.2.1"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-tooltip": "^1.1.8",
    "motion": "^12.5.0",
    "next-themes": "^0.4.6",
    "sonner": "^2.0.1"
  }
}